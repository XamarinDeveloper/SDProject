<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/waves_height"
        app:layout_constraintHeight_percent="@dimen/header_height_percent"
        android:id="@+id/headerPlaceholder"/>
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/headerPlaceholder"
        app:layout_constraintBottom_toTopOf="@id/counsellingCentersButton"
        app:layout_constraintLeft_toRightOf="@id/onlineCounsellingButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginLeft="@dimen/main_button_between_horizontal_margin"
        android:text="@string/first_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:background="@drawable/back_button_top_right"
        android:id="@+id/watcherButton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/headerPlaceholder"
        app:layout_constraintBottom_toTopOf="@id/readingButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/watcherButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginRight="@dimen/main_button_between_horizontal_margin"
        android:text="@string/second_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:background="@drawable/back_button_top_left"
        android:id="@+id/onlineCounsellingButton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/watcherButton"
        app:layout_constraintLeft_toRightOf="@id/readingButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginLeft="@dimen/main_button_between_horizontal_margin"
        android:text="@string/third_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:background="@drawable/back_button_middle_right"
        android:id="@+id/counsellingCentersButton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/onlineCounsellingButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/counsellingCentersButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginRight="@dimen/main_button_between_horizontal_margin"
        android:text="@string/fourth_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:background="@drawable/back_button_middle_left"
        android:id="@+id/readingButton"/>
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/counsellingCentersButton"
        app:layout_constraintLeft_toRightOf="@id/tba2Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginLeft="@dimen/main_button_between_horizontal_margin"
        android:text="@string/fifth_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:enabled="false"
        android:background="@drawable/back_button_bottom_right"
        android:id="@+id/tba1Button"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/auto"
        android:layout_height="@dimen/auto"
        app:layout_constraintWidth_percent="@dimen/main_button_width_percent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/readingButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tba1Button"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_button_between_vertical_margin"
        android:layout_marginRight="@dimen/main_button_between_horizontal_margin"
        android:text="@string/sixth_button"
        android:textStyle="bold"
        android:textColor="@color/OnPrimary"
        android:textAllCaps="false"
        app:elevation="5dp"
        app:backgroundTint="@null"
        android:enabled="false"
        android:background="@drawable/back_button_bottom_left"
        android:id="@+id/tba2Button"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tba1Button"
        layout="@layout/padding_bottom"
        android:id="@+id/bottomPadding"/>

</androidx.constraintlayout.widget.ConstraintLayout>
