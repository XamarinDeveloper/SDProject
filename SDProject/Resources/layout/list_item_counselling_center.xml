<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/post_item_vertical_margin"
    android:paddingBottom="@dimen/post_item_vertical_margin"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true"
    android:id="@+id/container">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/auto"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="@dimen/content_width_percent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/back_list_item"
        android:elevation="3dp"
        android:id="@+id/contentSpace">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/auto"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/post_item_vertical_padding"
            android:paddingBottom="@dimen/post_item_vertical_padding"
            android:paddingRight="@dimen/post_item_horizontal_padding"
            android:paddingLeft="@dimen/post_item_horizontal_padding"
            android:id="@+id/content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Primary"
                android:textDirection="rtl"
                android:justificationMode="inter_word"
                android:id="@+id/centerNameTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/centerNameTextView"
                android:layout_marginTop="@dimen/counselling_center_item_name_body_between_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/OnSurfaceVariant"
                android:textDirection="rtl"
                android:justificationMode="inter_word"
                android:drawableStart="@drawable/ic_landline"
                android:drawablePadding="@dimen/counselling_center_item_body_parts_between_margin"
                android:drawableTint="@color/OnSurfaceVariant"
                android:id="@+id/centerLandlineTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/centerLandlineTextView"
                android:layout_marginTop="@dimen/counselling_center_item_body_parts_between_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/OnSurfaceVariant"
                android:textDirection="rtl"
                android:justificationMode="inter_word"
                android:drawableStart="@drawable/ic_website"
                android:drawablePadding="@dimen/counselling_center_item_body_parts_between_margin"
                android:drawableTint="@color/OnSurfaceVariant"
                android:id="@+id/centerWebsiteTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/centerWebsiteTextView"
                android:layout_marginTop="@dimen/counselling_center_item_body_parts_between_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/OnSurfaceVariant"
                android:textDirection="rtl"
                android:justificationMode="inter_word"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="@dimen/counselling_center_item_body_parts_between_margin"
                android:drawableTint="@color/OnSurfaceVariant"
                android:id="@+id/centerAddressTextView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
